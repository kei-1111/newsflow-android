{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 5,
  "ignoreUnstable": true,
  "packageRules": [
    {
      "description": "Ignore custom newsflow library packages",
      "matchPackagePrefixes": ["io.github.kei-1111.newsflow.library"],
      "enabled": false
    },
    {
      "description": "Patch updates - auto-merge",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "groupName": "patch updates"
    },
    {
      "description": "Minor updates - grouped",
      "matchUpdateTypes": ["minor"],
      "groupName": "minor updates"
    },
    {
      "description": "Major updates - grouped, no auto-merge",
      "matchUpdateTypes": ["major"],
      "groupName": "major updates",
      "automerge": false
    }
  ]
}